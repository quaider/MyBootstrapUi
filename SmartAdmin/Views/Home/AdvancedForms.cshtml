<!--begin form elements-->
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-blank">
            <div class="panel-heading">
                <h3 class="panel-title">jquery select2</h3>
            </div>
            <div class="panel-body">
                <form action="javascript:void(0)">
                    <div class="form-group">
                        <label class="control-label">基础用法</label>
                        <select class="selectpicker">
                            <option value="1">Mustard</option>
                            <option value="2">Ketchup</option>
                            <option value="3">Relish</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">多项选择</label>
                        <select class="selectpicker" id="multiple" multiple="multiple">
                            <option>Mustard</option>
                            <option>Ketchup</option>
                            <option>Relish</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Placeholders</label>
                        <div>
                            <select class="selectpicker" id="placeholder">
                                <option value="">请选择</option>
                                <option>Mustard</option>
                                <option>Ketchup</option>
                                <option>Relish</option>
                            </select>
                        </div>
                        <div class="m-t-15">
                            <select id="placeholder1" multiple="multiple">
                                <option>Mustard</option>
                                <option>Ketchup</option>
                                <option>Relish</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">选项分组</label>
                        <select class="selectpicker">
                            <optgroup label="Picnic">
                                <option>Mustard</option>
                                <option>Ketchup</option>
                                <option>Relish</option>
                            </optgroup>
                            <optgroup label="Camping">
                                <option>Tent</option>
                                <option>Flashlight</option>
                                <option>Toilet Paper</option>
                            </optgroup>
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Loading array data</label>
                        <select class="selectpicker" id="loadingArrayData"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">禁用与选项禁用</label>
                        <div>
                            <select class="selectpicker form-control" disabled="disabled">
                                <option>Mustard</option>
                                <option>Ketchup</option>
                                <option>Relish</option>
                            </select>
                        </div>
                        <div class="m-t-15">
                            <select class="selectpicker">
                                <option>Mustard</option>
                                <option disabled="disabled">Ketchup</option>
                                <option>Relish</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">限制选择个数</label>
                        <select class="selectpicker" id="limitNumber" multiple>
                            <option>Mustard</option>
                            <option>Ketchup</option>
                            <option>Relish</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">不要搜索框</label>
                        <select class="selectpicker" id="noSearch">
                            <option title="one">Mustard</option>
                            <option title="two">Ketchup</option>
                            <option title="three">Relish</option>
                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('.selectpicker').select2();

        $('#multiple').select2({
            placeholder: "多项选择",
            allowClear: true
        });

        $("#placeholder").select2({
            placeholder: "Select a state",
            allowClear: true
        });

        $("#placeholder1").select2({
            placeholder: "Select a state"
        });

        var data = [{ id: 0, text: 'enhancement' }, { id: 1, text: 'bug', selected: true }, { id: 2, text: 'duplicate' }, { id: 3, text: 'invalid' }, { id: 4, text: 'wontfix' }];
        $("#loadingArrayData").select2({
            data: data
        });

        $("#limitNumber").select2({
            maximumSelectionLength: 2,
            minimumResultsForSearch: false
        });

        $("#noSearch").select2({
            minimumResultsForSearch: Infinity
        });
    });
</script>