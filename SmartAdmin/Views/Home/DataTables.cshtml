        <div class="panel panel-blank">
            <div class="panel-heading">
                <h3 class="panel-title">预览表格样式</h3>
            </div>
            <div class="panel-body">
                <a class="btn btn-default" onclick="chageStyle('')">
                    Default
                </a>
                <a class="btn btn-primary" onclick="chageStyle('table-primary')">
                    table-primary
                </a>
                <a class="btn btn-success" onclick="chageStyle('table-success')">
                    table-success
                </a>
                <a class="btn btn-info" onclick="chageStyle('table-info')">
                    table-info
                </a>
                <a class="btn btn-warning" onclick="chageStyle('table-warning')">
                    table-warning
                </a>
                <a class="btn btn-danger" onclick="chageStyle('table-danger')">
                    table-danger
                </a>
                <a class="btn btn-lilac" onclick="chageStyle('table-lilac')">
                    table-lilac
                </a>
                <a class="btn btn-teal" onclick="chageStyle('table-teal')">
                    table-teal
                </a>
                <a class="btn btn-inverse" onclick="chageStyle('table-inverse')">
                    table-inverse
                </a>
                <a class="btn btn-default" onclick="chageStyle('table-bordered')">
                    table-bordered
                </a>
                <a class="btn btn-default" onclick="chageStyle('table-sort-bg')">
                    排序背景
                </a>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        var tb = $("table.table").dataTable({
            //禁用表格自动计算大小(或者设置table的width为100%)
            bAutoWidth: false,
            buttons: [
            {
                extend: 'colvis',
                columns: ':not(:first-child)'
            }
            ]
        });

        $('[data-toggle="tooltip"]').tooltip({
            container: 'body'
        });

        // Settings().aoColumns[].nTh
        var a = tb.api().settings()[0].aoColumns;
        var b = tb.api().settings()[0].aoColumns.map(function (idx, i) {
            return tb.api().settings()[0].aoColumns[i].sTitle;
        });
        //debugger;
    });

    var prevClassName = "table-primary";

    function chageStyle(className) {

        if (className === "table-bordered" || className === "table-sort-bg") {
            $("#coloreddatatable").toggleClass(className);
            return;
        }

        $("#coloreddatatable").removeClass(prevClassName).addClass(className);
        prevClassName = className;
    }
</script>