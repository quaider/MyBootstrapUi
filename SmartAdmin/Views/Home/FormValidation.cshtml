@{
    Layout = null;
}
@model SmartAdmin.Models.User
<div class="row">
    <div class="col-xs-12">
        <div class="page-title-box">
            <h4 class="page-title pull-left">表单验证</h4>
            <ol class="breadcrumb pull-right">
                <li>
                    <a href="javascript:void(0)">Smart Admin</a>
                </li>
                <li>
                    <a href="javascript:void(0)">表单元素</a>
                </li>
                <li class="active">
                    表单验证
                </li>
            </ol>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-blank">
            <div class="panel-heading">
                <h3 class="panel-title">基本验证</h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" action="/Home/FormValidation">
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="UserName">
                            <span class="text-danger">*</span>
                            User name
                        </label>
                        <div class="col-sm-7">
                            @Html.TextBoxFor(f => f.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(f => f.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="EmailAddress">
                            <span class="text-danger">*</span>
                            Email Address
                        </label>
                        <div class="col-sm-7">
                            @Html.TextBoxFor(f => f.EmailAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(f => f.EmailAddress)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-7 col-sm-offset-3">
                            <button type="submit" class="btn btn-primary">
                                Register
                            </button>
                            <button type="reset" class="btn btn-default">
                                Cancel
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
